<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GetNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/g_gray</item>
        <item name="colorPrimaryVariant">@color/g_1</item>
        <item name="colorOnPrimary">@color/g_4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/g_2</item>
        <item name="colorSecondaryVariant">@color/g_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.GetNews">
        <item name="android:textViewStyle">@style/TitilliumWebTextViewStyle</item>
        <item name="android:buttonStyle">@style/TitilliumWebButtonStyle</item>
        <item name="android:editTextStyle">@style/TitilliumWebEditTextStyle</item>
    </style>

    <style name="TitilliumWebTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/titillium_web</item>
    </style>

    <style name="TitilliumWebButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/titillium_web</item>
    </style>

    <style name="TitilliumWebEditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/titillium_web</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/titillium_web</item>
        <item name="android:fontFamily">@font/titillium_web</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.Material3.Button.50" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/g_1</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>